class Solution {
public:
    int minCut(string s) {
        if(s.length()<2)return 0;
        int n=s.length();
        bool pal[n][n];
        int ans[n];
        memset(pal,false,sizeof pal);
        for(int i=n-1;i>=0;i--){
            ans[i]=n-i-1;
            for(int j=i;j<n;j++){
                if(s[i]==s[j]&&(j-i<2||pal[i+1][j-1])){
                    pal[i][j]=1;
                    if(j==n-1)ans[i]=0;
                    else ans[i]=min(ans[i],1+ans[j+1]);
                }
            }
        }
        return ans[0];
    }
};
